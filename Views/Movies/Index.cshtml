@model IEnumerable<Mission06_McDougal.Models.Movie>

<h2 class="mt-4 text-center">Movie Collection</h2>

<div class="container mt-3">
    <a href="/Movies/AddMovie" class="btn btn-success mb-3">Add New Movie</a>

    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Director</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Copied to Plex</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Category</td>
                <td>@movie.Director</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>@(movie.Edited ? "Yes" : "No")</td>
                <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                <td>
                    <a href="/Movies/Edit/@movie.MovieId" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Movies/Delete/@movie.MovieId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>