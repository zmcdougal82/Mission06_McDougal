@model Mission06_McDougal.Models.Movie

<h2 class="text-center">Add a Movie</h2>

<div class="container">
    <form asp-action="AddMovie" method="post" class="border p-4 rounded bg-light">
        <div class="mb-3">
            <label class="form-label">Title:</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Category:</label>
            <input asp-for="Category" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Director:</label>
            <input asp-for="Director" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Year:</label>
            <input asp-for="Year" type="number" class="form-control" required />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Rating:</label>
            <input asp-for="Rating" class="form-control" required />
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Edited" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Edited</label>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="CopiedToPlex" class="form-check-input" type="checkbox" required />
            <label class="form-check-label">Copied to Plex</label>
            <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Movies" class="btn btn-secondary">Cancel</a>
    </form>
</div>